<!DOCTYPE html>
<html>
<head>
  <title>CRM4DIV</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400, 700' %>
  <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="sidebar">
    <div id="logo">
      <%= link_to root_path do %>
        <p>DIV</p>
      <% end %>
    </div>

    <ul>
      <li class="category">CRM</li>
      <li><%= link_to "Mes entreprises", root_path %></li>
      <li><%= link_to "Mes prospects", prospects_path %></li>
    </ul>

    <ul>
      <li class="category">Gestion</li>
      <li><a href="#">Devis</a></li>
      <li><a href="#">Factures</a></li>
      <li><a href="#">Projets</a></li>
    </ul>

</div>
  <div id="main_content">
    <div id="header">
    <% if current_page?(root_path) %>
      <p>Toutes les entreprises</p>
     <% else %>
      <%= link_to "Retour aux entreprises", root_path %>
      <% end %>
      <div class="buttons">
        <button class="button"><%= link_to "Nouvelle entreprise", new_entreprise_path %></button>
        <button class="button"><%= link_to "Nouveau prospect", new_prospect_path  %></button>
        <button class="button">Log Out</button>
      </div>
    </div>
    <%= yield %>
  </div>

  <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert") %>
  <% end %>


</body>
</html>
